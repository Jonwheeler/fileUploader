<div class="well">
  <h1>Contents of bucket</h1>
  <% if @uploads.any? %>
    <% @uploads.each do |upload| %>
    <div class="row" id="element-in-bucket">
      <strong><%= upload.name %></strong>
      Date uploaded:
      <%= upload.created_at.strftime '%d/%m/%y' %>
      <%= link_to 'Download', "#{upload.file}", :class => "label label-success" %>
      <%= link_to 'Edit', edit_upload_path(upload), :class => "label label-warning" %>
      <%= link_to 'Destroy', upload, method: :delete, data: { confirm: 'Are you sure?' }, :class => "label label-important" %></br>
    </div>
    <% end %>
  <% else %>
    <p>There are no files in storage</p>
  <% end %>
</div>

<div class="well">
  <h1>New upload</h1>

  <%= render 'form' %>
</div>